<% layout("/layouts/boilerplate")%>
<br />
<div class="row">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>

    <form
      method="post"
      class="needs-validation"
      novalidate
      action="/listings/<%=listing._id%>?_method=PUT"
    >
      <div class="mb-3" novalidate>
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          value="<%=listing.title%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter the Title</div>

        <div class="valid-feedback">Title Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          rows="3"
          cols="25"
          class="form-control"
          required
        >
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Please describe your listing</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <textarea
          type="text"
          name="listing[image][url]"
          rows="3"
          cols="40"
          class="form-control"
          required
        >
<%=listing.image.url%></textarea
        >
        <div class="invalid-feedback">Enter valid image URL</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          name="listing[price]"
          value="<%=listing.price%>"
          type="number"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid price</div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          value="<%=listing.country%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid country</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Location</label>
        <input
          name="listing[location]"
          value="<%=listing.location%>"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid location</div>
      </div>

      <button class="btn btn-dark add-btn">Edit</button>
    </form>
  </div>
</div>
<br />
<br />
