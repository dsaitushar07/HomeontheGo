<% layout("/layouts/boilerplate")%>
<br />
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create your new Listing</h3>

    <form method="post" action="/listings" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          placeholder="enter title"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please enter the Title</div>

        <div class="valid-feedback">Title Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listing[description]"
          placeholder="enter detailed description"
          rows="3"
          cols="15"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please describe your listing</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <textarea
          name="listing[image][url]"
          placeholder="enter image URL/Link"
          rows="3"
          cols="25"
          class="form-control"
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          name="listing[price]"
          placeholder="enter price"
          type="number"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid price</div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          name="listing[country]"
          placeholder="enter country"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid country</div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Location</label>
        <input
          name="listing[location]"
          placeholder="enter location"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter valid location</div>
      </div>

      <button class="btn btn-dark add-btn">Add</button>
    </form>
  </div>
</div>
<br />
<br />
