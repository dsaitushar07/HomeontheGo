<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing in detail</h3>
  </div>
  <div class="card col-6 offset-3 mb-4 show-card">
    <img
      src="<%=listing.image.url%>"
      class="card-img-top show-img"
      alt="listing-image"
    />
    <div class="card-body">
      <b><h4><%=listing.title%></h4></b>
      <p class="card-text">
        <%=listing.description%><br />
        <b>Price: </b>&#8377; <%=listing.price.toLocaleString("en-IN")%><br />
        <%=listing.location%>, <%=listing.country%>
      </p>
    </div>
  </div>
  <br />
  <div class="show-options mb-3">
    <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark add-btn">
      Edit
    </a>
    <form method="post" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
</div>
